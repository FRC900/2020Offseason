<?xml version="1.0"?>
<launch>
	<arg name="primary_imu" default="ADI" />
	<node name="navx_publisher" pkg="navx_publisher" type="navx_publisher_node" output="screen">
		<param name="device" value="/dev/NAVX"/>
	</node>
	<include if="$(eval arg('primary_imu')=='ADI')" file="$(find adi_driver)/launch/adis16470.launch"> 
		<arg name="device" value="/dev/ADI" />
	</include>
	<node if="$(eval arg('primary_imu')=='NAVX')" name="imu_zero" pkg="imu_zero" type="imu_zero_node" output="screen">
		<remap from="imu/data" to="navx/data" />
	</node>
</launch>
